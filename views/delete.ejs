<%- include ("./partials/_header") %>

    <main role="main" class="container">
        <div class="row">
            <div class="col-md-8 blog-main">
                <h2 class="blog-post-title">Are you sure you want to delete this post?</h2>
                <form action="/delete/<%= post._id%>" method="POST">
                    <div class="form-group">
                        <input readonly type="text" class="form-control" name="title" placeholder="<%= post.title %>">
                    </div>
                    <div class="form-group">
                        <input readonly type="text" name="author" class="form-control" placeholder="<%= post.author %>">
                    </div>
                    <div class="form-group">
                        <textarea readonly class="form-control" name="post_data" cols="100" rows="10"><%= post.post_data %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Yes, delete post</button>
                </form>
            </div>
        </div>
    </main>

    <%- include ("./partials/_footer") %>